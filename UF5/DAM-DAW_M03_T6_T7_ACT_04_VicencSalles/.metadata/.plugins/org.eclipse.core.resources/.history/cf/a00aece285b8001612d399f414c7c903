package actividad3;

import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JTextField;
import javax.swing.JPasswordField;
import javax.swing.JButton;
import java.awt.Color;
import javax.swing.SwingConstants;
import javax.swing.JTextPane;

public class Ventana extends JFrame{
	private JTextField textField;
	private JPasswordField passwordField;
	public Ventana() {
		getContentPane().setLayout(null);
		
		JLabel lblNombre = new JLabel("Nombre");
		lblNombre.setBounds(35, 35, 69, 20);
		getContentPane().add(lblNombre);
		
		textField = new JTextField();
		textField.setBounds(35, 57, 146, 26);
		getContentPane().add(textField);
		textField.setColumns(10);
		
		JLabel lblContrasea = new JLabel("Contrase\u00F1a");
		lblContrasea.setBounds(35, 97, 121, 20);
		getContentPane().add(lblContrasea);
		
		passwordField = new JPasswordField();
		passwordField.setBounds(35, 120, 146, 20);
		getContentPane().add(passwordField);
		
		JButton btnNewButton = new JButton("Enviar");
		btnNewButton.setBounds(298, 199, 115, 29);
		getContentPane().add(btnNewButton);
		
		JLabel lblCredencialesIncorrectas = new JLabel("CREDENCIALES INCORRECTAS");
		lblCredencialesIncorrectas.setHorizontalAlignment(SwingConstants.CENTER);
		lblCredencialesIncorrectas.setForeground(Color.RED);
		lblCredencialesIncorrectas.setBounds(67, 166, 283, 20);
		getContentPane().add(lblCredencialesIncorrectas);
	}
}
